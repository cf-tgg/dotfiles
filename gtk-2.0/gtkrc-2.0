gtk-theme-name="Arc-Dark"
gtk-icon-theme-name="Arc-Dark"
gtk-application-prefer-dark-theme="true"

gtk-font-name="Sans 11"
gtk-xft-dpi=192

# Enable smooth fonts
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintslight"
gtk-xft-rgba="rgb"

# General settings
gtk-enable-animations=1
gtk-show-unicode-menu=1
gtk-enable-tooltips=1
gtk-entry-select-on-focus=1

# Button and Menu settings
gtk-primary-button-warps-slider=1
gtk-menu-images=1
gtk-menu-popup-delay=100
gtk-tooltip-timeout=500
gtk-tooltip-browse-mode-timeout=300

# Cursor settings
gtk-cursor-theme-name="Adwaita"
gtk-cursor-theme-size=56

# File chooser backend
gtk-file-chooser-backend="gtk"

# Miscellaneous settings
gtk-error-bell=0
gtk-recent-files-limit=20
gtk-recent-files-max-age=30
