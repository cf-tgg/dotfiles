#!/bin/sh

# quick edit resource alias
alias ytaliases='$EDITOR ~/.config/shell/ytaliases && source ~/.config/shell/ytaliases'

# rsync config
alias sync_ytaliases='rsync ~/.config/shell/ytaliases cf@10.0.0.234:~/; rsync ~/.config/shell/ytaliases cf@10.0.0.203:~/; rsync ~/.config/shell/ytaliases cf@10.0.0.27:~/ 2>/dev/null'

# ytfzf
alias ytf='ytfzf -ft' \
	ytm='ytf -m' \
	yts='ytfzf -s' \
	ytst='ytfzf -ltf -cS --async-thumbnails' \
	ytdlm='ytfzf -dlm' \
	ytdlmf='ytfzf -dlmf' \
	ytdl='yt -dlf' \
	ytdH='ytfzf -dfH' \
	ytlt='ytfzf -lt --async-thumbnails' \
	ytl='ytfzf -lf' \
	ytstl='ytfzf -tl --async-thumbnails -cSI' \
	ytsdl='ytfzf -dl --async-thumbnails -cSI' \
	ytsubs='bat ~/.config/ytfzf/subscriptions' \
	ytA='ytfzf -A -r -n 100' \
	ytpl='ytpl --scrape=youtube-playlist' \
	ytdlpl='ytdl --scrape=youtube-playlist' \
	ytdlmpl='ytdlm --scrape=youtube-playlist' \
	ytlist='ytf -l -cS' \
	yttrending='ytfzf -cT -r -n 100'

