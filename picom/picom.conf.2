# ];

#################################
#     Background-Blurring       #
#################################

# Background blur settings
blur-background = true;  # Enable background blurring
blur-background-fixed = true;
blur-kern = "5x5box";  # Use a smaller blur kernel for better performance
blur-background-exclude = [
  "window_type = 'dock'",
  "window_type = 'desktop'",
  "_GTK_FRAME_EXTENTS@:c"
];

#################################
#       General Settings        #
#################################

# Set backend for rendering
backend = "glx";  # Change to 'glx' for better performance and smoother animations

# Dithering
dithered-present = true;

# Enable VSync to reduce screen tearing
vsync = true;  # Make sure vsync is enabled for smooth display output

# Focus detection settings
mark-wmwin-focused = true;
mark-ovredir-focused = true;

# Rounded corners detection
detect-rounded-corners = true;

# Client opacity detection
detect-client-opacity = true;

# Group windows by transient for focus management
detect-transient = true;  # Enable for better focus management in dwm
