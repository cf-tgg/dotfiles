#################################
#             Shadows           #
#################################

# Enable client-side shadows on windows.
shadow = true;

# Shadow properties
shadow-radius = 12;  # Increase radius for softer shadows
shadow-opacity = 0.7;  # Slightly reduce opacity for a subtler shadow effect
shadow-offset-x = -8;  # Small increase for more prominent shadow effect
shadow-offset-y = -8;

# Shadow exclusion rules
shadow-exclude = [
  "name *= 'Notification'",
  "class_g = 'Conky'",
  "class_g ?= 'Notify-osd'",
  "class_g = 'Cairo-clock'",
  "_GTK_FRAME_EXTENTS@:c"
];

#################################
#         Fading and Animations  #
#################################

# Enable fading for windows.
fading = true;

# Fading step duration
fade-in-step = 0.03;  # Smoothen fade-in effect
fade-out-step = 0.03;  # Smoothen fade-out effect
fade-delta = 3;  # Slightly decrease delta for smoother fading

# Enable window animations
animation = true;

# Animation properties for smoother experience
animation-stiffness = 200;  # Reduced for more fluid motion
animation-dampening = 25;  # Higher for more controlled, less elastic animations

# Enable animations for window opening and closing
animation-window-move = true;
animation-window-size = true;
animation-for-open-window = true;

# Animation duration for windows opening and closing
animation-window-move-time = 0.2;  # Reduced for snappier animations
animation-window-size-time = 0.1;

#################################
#   Transparency / Opacity      #
#################################

# Opacity settings
inactive-opacity = 0.93;  # Slightly reduced for more noticeable inactive windows
# inactive-opacity-override = true;  # Ensure override to apply opacity settings consistently

# Exclude certain windows from being focused.
focus-exclude = [ "class_g = 'Cairo-clock'" ];

